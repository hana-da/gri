#! /usr/bin/ruby

require 'rubygems'
require 'rack'

if File.symlink? __FILE__
  org_path = File.dirname(File.expand_path(File.readlink(__FILE__)))
else
  org_path = File.dirname(File.expand_path(__FILE__))
end
$:.unshift org_path.untaint + '/../lib'

require 'gri/wmain'
require 'gri/log'
require 'gri/trad'

GRI::WMain.new(GRI::Trad.new).run
